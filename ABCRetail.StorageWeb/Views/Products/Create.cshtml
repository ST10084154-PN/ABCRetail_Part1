@model ABCRetail.StorageWeb.Models.Product
@{
    ViewBag.Title = "Create Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create Product & Optional Order</h2>
<form method="post">
    <label>Name</label><input name="Name" required/>
    <label>Description</label><input name="Description" />
    <label>Price</label><input name="Price" type="number" step="0.01" required/>
    <label>Stock</label><input name="Stock" type="number" required/>
    <label>Order Quantity (optional)</label><input name="orderQuantity" type="number" value="0"/>
    <button type="submit">Save</button>
</form>